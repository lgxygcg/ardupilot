    "version": "0.2.0",
    "configurations": [
        {
            "name": "ARM Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/fmuv3/bin/arducopter",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/opt/gcc-arm-none-eabi-10-2020-q4-major/bin/arm-none-eabi-gdb",
            "targetArchitecture": "arm",
            "setupCommands": [
                {
                    "description": "connect debug file(.elf)to gdb",
                    "text": "file ${workspaceRoot}/build/fmuv3/bin/arducopter",
                    "ignoreFailures": false
                },
                {
                    "description": "connect GDB Server",
                    "text": "target remote localhost:3333",
                    "ignoreFailures": false
                },
                {
                    "description": "Reset MCU",
                    "text": "monitor reset",
                    "ignoreFailures": false
                },
                {
                    "description": "Halt",
                    "text": "monitor halt",
                    "ignoreFailures": false
                },
                {
                    "description": "load to MCU",
                    "text": "load",
                    "ignoreFailures": false
                }
            ]
        }
    ]
}